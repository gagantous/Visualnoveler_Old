<% title "#{@vn.name} Reviews" %>
<% description ("Read #{@vn.name} Reviews in Visualnoveler - #{@vn.summary.truncate(120)} ") %>
<section id="vn-review-section">
<div class="container">
	<div class="row" style="padding-top:20px;">
		<div class="col-md-10">
			<div class="panel panel-default"><div class="panel-body">
			<h4><%= link_to @vn.name,vn_path(@vn)%> Reviews </h4>
			<%= render :partial => 'review', collection: @reviews  %>
			</div></div>
		</div>
	</div>
</div>
</section>