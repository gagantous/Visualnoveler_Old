
<div class="container">
	<div class="row">

	<h2 style="display:inline;">Edit Review</h2><%= link_to image_path("markdown.png"), :class => 'fancybox',:style =>"text-decoration:none;", :rel =>'?' do %>
			     <i class="fa fa-question-circle fa-2x"></i>
			     <% end %>

		<%= simple_form_for @review, url: vn_review_path do |f| %>

		<div class="row">
		<div class="col-lg-6 removepadding" >
		  
			
		 	 <%= f.input :details,input_html: {:rows => 21,id: "markdown"},label: false %>
		 </div>	
		 <div class="col-lg-6 removepadding">
		 	<div class="panel panel-default">
				<div id="preview" class="panel-body" style=" height: 432px;"> </div>
			</div>
		 </div>
		</div>
		
		<div class="row">
		<div class="col-lg-12">
			<%= f.input :rating,collection: 0..10,input_html:{style:"width:120px;"},:required => false %>

		  <%= f.button :submit , class: "btn btn-primary" %>
		 </div>
		</div>

		<% end %>
		 <%= link_to vn_review_path(@review.vn,@review),:method=>:delete,:style =>"margin-top:50px;",:class =>"btn btn-danger",data:{ disable_with: "Deleting Review...."} do %>
			 	<i class="fa fa-trash-o" style="padding-right:10px;"></i>Destroy Review
				<% end %>


	</div>

</div>
