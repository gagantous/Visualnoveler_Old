<div class="row news-meta">
	<div class="col-md-2 col-xs-3" style="min-height:78px;">
		<%= image_tag(news.user.poster_image,class:"img-circle author-img") %>
	</div>

	<div class="col-md-8 col-xs-9">
		<span class="author">
			<%= link_to news.user.name,user_path(news.user) %>
			<%= link_to 'Edit Post',edit_news_path(@news),'data-no-turbolink' =>"true", class:"btn blue-button",style:"color:white; margin-left:65px;" if user_signed_in? && (current_user.admin? || current_user.mod? || current_user.writer?) %>
   	<h1> <span class="title-link"><%= @news.title %> </span> </h1>
   	<%= image_tag(@news.featured_image.url,alt: @news.title,class: "news-featuredimg") unless @news.featured_image.blank? %>
  	<%= markdown(@news.content) %>

		</span>
		<ul class="list-inline">
			<% news.tags.each do |tag| %>
			<li>
				<%= link_to tag.name, tag_path(tag),class:"tags-item" %> 
			</li>
			<% end %>
		</ul>
		<%= news.created_at.strftime("%d %b %Y") %>

	</div>
</div>