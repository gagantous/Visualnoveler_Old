

<div class="container">
	<div class="row">
		<%= simple_form_for @publisher do |f| %>

		<h1>Edit Publisher</h1>
		<div class="row">
		<div class="col-lg-4">
		  <%= f.input :name %>
		</div>
		 </div>
		 <div class="row">
		 <div class="col-lg-6">
		  <%= f.input :details %>
		 </div>
		</div>

		<div class="col-lg-6">
		  <%= f.button :submit , class: "btn btn-primary" %>
		 </div>
		 	<div class="col-lg-3 col-lg-offset-2">
		  <%= link_to 'Delete Publisher',@publisher, class: "btn btn-danger",method: :delete %>
		 </div>
		<% end %>


	</div>

</div>