<div class="container">
	<div class="row">

	<h1>New Franchise</h1>

		<%= simple_form_for @franchise do |f| %>

		<div class="row">
		<div class="col-lg-6">
		  <%= f.input :name, label: 'Name', error: 'Name is mandatory, please specify one',required: false  %>
		 </div>
		</div>
	
		<div class="col-lg-12">
		  <%= f.button :submit , class: "btn btn-primary" %>
