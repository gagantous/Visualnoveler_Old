
<div class="container">
	<div class="row">

		<%= simple_form_for @bracket do |f| %>


		<div class="col-lg-12">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Bracket Name', error: 'Name is mandatory, please specify one',required: false  %>

		 </div>

		  <div class="col-lg-7">
		 
			<%= f.input :details,:input_html => {:rows => 15},label: 'Details and Rules of the Bracket' %>
		</div>

		<%= f.simple_fields_for :bracket_characters do |c| %>
			<div class="col-lg-12">
			  <%= c.input :name, input_html: {style: "width:200px;"}, label: 'Name', error: 'Name is mandatory, please specify one',required: false  %>
			 </div>
			 <div class="col-lg-12">
			 	<%= c.input :image %>
			 	<%= image_tag c.object.image.url, :style =>"width:200px;height:auto;max-height:200px;" if c.object.image? %>

				<%= link_to 'Crop Image',crop_bracket_path(@bracket,:char_id => c.object.id) %>
			 </div>
			  <div class="col-lg-4">
			 
				<%= c.input :details,:input_html => {:rows => 6},label: 'Biography' %>
			</div>
		<% end %>

		<div class="col-lg-12">
		  <%= f.button :submit , class: "btn btn-primary" %>
		</div>
		<% end %>

	</div>

</div>