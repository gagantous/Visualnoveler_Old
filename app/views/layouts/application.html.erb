<!DOCTYPE html>
<html>
<head>
  <meta name="description" content="<%= if content_for?(:description) then yield(:description) else 'Start tracking Visual Novels and discover other hidden Visual Novel gems at Visualnoveler' end %>">

  <title>
    <%= if content_for?(:title) then yield(:title) + ' | ' end %>
    Visualnoveler
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='//fonts.googleapis.com/css?family=Poiret+One' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= favicon_link_tag %>

   <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
              <% if user_signed_in? %>
          <% if current_user.admin? || current_user.mod? %> 
         <ul class ="nav navbar-nav">
            <li class="dropdown logotitle-dropdown">
             
          <a class="navbar-brand" data-toggle="dropdown" class="dropdown-toggle" href=<%= vns_path %>><span class="navLogo">Visualnoveler</span></a>
              <ul class="dropdown-menu">
                  <li class="dropdown-header">Dashboard</li>
                  <li><%= link_to "Home", vns_path %></li>
                  <li><%= link_to "Visual Novel listings", admin_vn_path %></li>
                  <li><%= link_to "Character listings", admin_character_path %></li>
                  <li><%= link_to "Developer listings", admin_developer_path %></li>
                  <li><%= link_to "Publisher listings", admin_publisher_path %></li>
                  <li><%= link_to "Genre listings", admin_genre_path %></li>
                  <li><%= link_to "User listings", admin_users_path %></li>
                  <li><%= link_to "Screenshot listings", admin_screenshot_path %></li>
                  <li><%= link_to "Reviews listings", admin_review_path %></li>
                  <li><%= link_to "Franchise listings", admin_franchise_path %></li>
                  <li role="separator" class="divider"></li>
                  <li class="dropdown-header">Creation</li>
                  <li><%= link_to "Create Visual Novel", new_vn_path %></li>
                  <li><%= link_to "Create Visual Novel Simple", simple_create_vns_path %></li>
                  <li><%= link_to "Create Character", new_character_path %></li>
                  <li><%= link_to "Create Developer", new_developer_path %></li>
                  <li><%= link_to "Create Publisher", new_publisher_path %></li>
                  <li><%= link_to "Create Genre", new_genre_path %></li>
                  <li><%= link_to "Create Franchise", new_franchise_path %></li>
              </ul>
           </li>
         </ul> 

         <% else %>
         <a class="navbar-brand" href=<%= vns_path %>><span class="navLogo">Visualnoveler</span></a>
         <% end %> 

         <% else %>
             <a class="navbar-brand" href=<%= vns_path %>><span class="navLogo">Visualnoveler</span></a>
         <% end %>

        </div>
      <div id="navbar" class="navbar-collapse collapse">

         <ul class ="nav navbar-nav">
            <li class="dropdown logotitle-dropdown ">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle button-nav"><span class="logotitle">Visual Novels</span> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><%= link_to "What's New", vns_path %></li>
                  <li><%= link_to "Top Visual Novels", top_vns_path %></li>
                  <li><%= link_to "Translated Visual Novels", translated_vns_path %></li>
                  <li><%= link_to "VN Walkthroughs", walkthroughs_vns_path %></li>
                  <% if user_signed_in? %>
                  <li class="divider"></li>
                  <li class="dropdown-header">My Visual Novels</li>
                  <li><%= link_to "Favourites", favourite_user_path(current_user) %></li>
                  <li><%= link_to "Wishlist", wishlist_user_path(current_user) %></li>
                  <li><%= link_to "Completed", completed_user_path(current_user) %></li>
                  <li><%= link_to "Playing", watch_user_path(current_user) %></li>
                  <% end %>
              </ul>
            </li>

            <li class="dropdown logotitle-dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle button-nav"><span class="logotitle">Discover</span> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><%= link_to 'Devblog', "http://blog.visualnoveler.com" %></li>
                  <li><%= link_to 'Genres', genres_path  %></li>
                  <li><%= link_to 'Developer',developers_path %></li>
                  <li class="divider"></li>
                  <li class="dropdown-header">Lists</li>
                  <li><%= link_to 'All Genres',all_genres_path %></li>
                  <li><%= link_to 'All Developers',all_developers_path %></li>
              </ul>
            </li>
             <% if user_signed_in? %>
          <% if current_user.admin? || current_user.mod? %> 
            <li class="dropdown logotitle-dropdown">
              <a href="#" data-toggle="dropdown" class="dropdown-toggle button-nav"><span class="logotitle">Contests</span> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><%= link_to 'View Contests', contests_path  %></li>
                  <li><%= link_to 'Create Contests',new_contest_path %></li>
              </ul>
            </li>
            <% end %> <% end %>

            <li class="logotitle-dropdown">
             <a href=<%= pages_about_path %> class="button-nav"><span class="logotitle">About</span> </a>
           </li>

            <% if !user_signed_in? %>
            <li class ="logotitle-dropdown">
               <a href="#" class="button-nav" data-toggle="modal" data-target="#login-modal"><span class="logotitle"><b>Login</b></span> </a>
            </li>
            <li class ="logotitle-dropdown">
               <a href=<%= register_path %> class="button-nav"><span class="logotitle"><b>Register</b></span> </a>
            </li>
            <% end %>
         </ul>

          <% if user_signed_in? %>
         <ul class="nav navbar-nav navbar-right">
              <li class="dropdown pull-right">
                <a href="#" data-toggle="dropdown" class="dropdown-toggle navbar-brand"><span class="logotitle"><%= current_user.name %></span> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><%= link_to "My Profile", user_path(current_user) %></li>
                    <li><%= link_to "Edit Profile", edit_path %></li>
                    <li><%= link_to "My Library", library_user_path(current_user) %></li>
                    <li><%= link_to "Crop Profile Picture", crop_user_path(current_user) %></li>
                    <li><%= link_to "Logout", logout_path, :method => :delete %></li>    
                </ul>
             </li>
               <% if current_user.poster_image.blank? %>
                  <%= image_tag("default_avatar.jpg",:class => "pull-right",:style =>"max-width: 50px; max-height: 50px;")  %>
               <% else %>
                  <%= image_tag("#{current_user.poster_image.url}",:class => "pull-right",:style =>"max-width: 50px; max-height: 50px;")  %>
               <% end %>
          </ul>
          <% end %>
       
           <div class="input-append">
           <%= form_tag(search_path, :method => "get", class: "navbar-form", id: "search-form" ) do %>
                <%= text_field_tag :search, params[:search], class: "form-control typeahead", placeholder: "Search Visual Novels" %>
                

              <%= button_tag(type: "submit", class: "btn btn-primary padding-search") do %>
                  <i class="fa fa-search 6x"></i>
              <% end %>
          <% end %>
  </div>

        </div><!--/.nav-collapse -->
      </div><!--end of container -->
    </nav>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      

   <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
        <div class="loginmodal-container">
          <h1>Login to Your Account</h1><br>
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          
  <div class="login-help">
    <%= f.button :submit, "Log in",:class =>"login loginmodal-submit" %>
      <%= link_to 'Register', register_path,:class =>"links" %> - <%= link_to 'Forgot Password',new_user_password_path,:class =>'links' %>
      <br><br>

    <ul class="list-inline">
      <li><%= link_to omniauth_authorize_path(:user,"facebook"),class: 'btn btn-facebook' do %>
       <span class="fa fa-facebook" style="padding-right:2px;"></span>
       <%= "Facebook" %>
      <% end %></li>

      <li><%= link_to omniauth_authorize_path(:user,"google_oauth2"),class: 'btn btn-googleauth' do %>
     <span class="fa fa-google" style="padding-right:2px;"></span>
     <%= "Google" %>
      <% end %> </li>
    </ul>
  </div>
<% end %> <!--end of modal !-->
         
        </div>
      </div>
 </div>



<%= yield %>
 
</body>
</html>
<!-- 
end of container -->


