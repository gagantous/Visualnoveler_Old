<% @news.each do |news| %>
	<div class="news">
		<div class="news-meta">
			<div class="row">
			<div class="col-md-2">
			
			<%= image_tag(news.user.poster_image,class:"img-responsive img-circle author-img") %>

		</div>
		<div class="col-md-10">
			<span class="author">
				<%= link_to news.user.name,user_path(news.user) %>

			</span>

			<%= news.created_at.strftime("%d %b %Y") %>
			<ul class="list-inline">
				<% news.tags.each do |tag| %>
				<li>
					<%= link_to tag.name, tag_path(tag),class:"tags-item" %> 
				</li>
				<% end %>
			</ul>
		</div>
		</div>

		<h1> <%= link_to news.title,news_path(news),'data-no-turbolink' =>"true",class: "title-link" %> </h1>
		<%= image_tag(news.featured_image.url,class: "news-featuredimg") unless news.featured_image.blank? %>
		<% if news.content.length > 400 %>
			<%= markdown(HTML_Truncator.truncate(news.content,100)) %>
		<% else %>
			<%= markdown(news.content) %>
		<% end %>
		<%= link_to 'Read More',news_path(news),'data-no-turbolink' =>"true",class:"btn blue-button read-more" unless news.content.length < 400 %>
		<hr class="news-hr">
	</div>
<% end %>