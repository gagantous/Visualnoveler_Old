<div class="col-md-12">
		<div class="tab-content" style="padding-top:0px;">
		    <div role="tabpanel" class="tab-pane fade in active" id="default-vnlist">
	
		    	<div class="vn-column">
		    		<%= link_to vn_path(vn) do %>
		    			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "vn-index-poster") %>
		    		<% end %>
		    		<div class="panel panel-default"><div class="panel-body panel-vnindex">
	    				<a href=<%= vn_path(vn) %>><h4>
	    					<% if vn.name.length > 30 %>
	    						<span class="bottom" style="font-size:14px !important;"><%= vn.name %>
	    					<% else %>
	    						<span class="bottom"><%= vn.name %>
	    					<% end %>
	    					</span></h4></a>	
	    					<ul class="list-inline vnindex-genre">
	    						<% vn.genres.limit(2).each do |genre| %>
	    						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre) %></li>
	    						<% end %>
	    					</ul>
		    		</div></div>
		    	</div>
		    				<div class="clearfix"></div>
		    				<!-- i am paginate !-->
		    	
		    </div> <!-- tabpanel vnlist !-->

		    <div role="tabpanel" class="tab-pane fade" id="vnlist-summary">
		    	<div class="row row-vnlist-summary">

		    		<div class="panel panel-default"><div class="panel-body">
		    	<div class="col-md-3">
		    		<%= link_to vn_path(vn) do %>
		    			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "img-responsive") %>
		    		<% end %>
		    	</div>
		    	<div class="col-md-9">
	    				<a href=<%= vn_path(vn) %>><h3>
	    					<% if vn.name.length > 30 %>
	    						<span class="bottom" style="font-size:14px !important; color:black;"><%= vn.name %>
	    					<% else %>
	    						<span class="bottom" style="color:black;"><%= vn.name %>
	    					<% end %>
	    				</span></h3></a>	
    					<ul class="list-inline vnindex-genre" style="padding-bottom:10px;">
    						<% vn.genres.limit(2).each do |genre| %>
    						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre) %></li>
    						<% end %>
    					</ul>
					<span class="vn-contentpadding summary-text"><%= vn.summary %> </span>
		    	</div>
		    		</div></div>
    			</div> <!-- row !-->
    			<div class="clearfix"></div>
    		</div> <!-- end of long summary tab !-->
		</div>
		</div> <!-- end of tab-content + col 12 !-->