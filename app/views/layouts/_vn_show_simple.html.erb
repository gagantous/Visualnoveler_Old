<% unless @vn.blank?  %>
<div class="col-md-12">

		<div class="tab-content" style="padding-top:0px;">
		    <div role="tabpanel" class="tab-pane fade in active" id="default-vnlist">
			<% @vn.each do |vn| %>
		    	<div class="vn-column">
		    		<%= link_to vn_path(vn) do %>
						<%= image_tag(vn.image_poster,:alt => vn.name, :class=> "vn-index-poster") %>
					<% end %>
					<div class="vn-column-data">
						<a href=<%= vn_path(vn) %>> <h4>
							<% if vn.name.length > 30 %>
								<span class="vn-poster-name"><%= vn.name %>
							<% else %>
								<span class="vn-poster-name"><%= vn.name %>
							<% end %>
						</h4></a>
					</div>
		    	</div>
		    <% end %>
		    	<div class="clearfix"></div>
		    	
		    </div> <!-- tabpanel vnlist !-->

		
		   <%= render 'layouts/vn_tab' %>   
		</div>	
</div> <!-- end of tab-content + col 12 !-->
<% end %>