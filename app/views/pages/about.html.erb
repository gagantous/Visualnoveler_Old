			<%= link_to 'Fuwanovel','http://fuwanovel.net/',:class =>"text-primary",style: "font-size:1.2em;" %><br>
			<%= link_to 'Monthly Eroge Releases',"https://omochikaeri.wordpress.com/",:class =>"text-primary",style: "font-size:1.2em;" %>
