<% title "Discover Visual Novels by genres" %>
<% description "Visual novels are sorted by Developers in this page. Come join us to start tracking and discovering new visual novels!" %>

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h2 class="vnindex-heading">Random Developer listings</h2>
		</div>
	
		<% @developers.each do |developer| %>
		<% vn = developer.vns.order("RANDOM()").limit(1).first %>

		<% if vn %>
<div class="vn-column">

			<%= link_to vn_path(vn) do %>
			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "vn-index-poster") %>
			<% end %>
	<div class="panel panel-default">
		<div class="panel-body">


		<a href=<%= vn_path(vn) %>><h4><span class="bottom"><%= vn.name%></span></h4>	</a>

			<ul class="list-inline vnindex-genre text-left">
						<li class="vngenre-padding inline-nopadding"><%= link_to developer.name,developer_path(developer),:style =>"font-size: 1.1em;" %></li>
				</ul>
			
			
		</div>
	</div>
</div>
<% end %>
<% end %>

	</div>
</div>