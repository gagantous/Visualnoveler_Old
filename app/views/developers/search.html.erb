<% title "Discover Visual Novels by Developers" %>
<% description "Visual novels are sorted by Developers in this page. Come join us to start tracking and discovering new visual novels!" %>

<div class="container-fluid">
	<div class="row vnindex-row">
		<div class="col-md-12">
			<h2>Random Developers</h2>
		 
		</div>
	
		<% @developers.each do |developer| %>
		<% vn = developer.vns.order("RANDOM()").limit(1).first %>

		<% if vn %>
<div class="vn-column">

			<%= link_to developer_path(developer) do %>
			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "vn-index-poster") %>
			<% end %>
	<div class="panel panel-default">
		<div class="panel-body panel-vnindex">


		<a href=<%= developer_path(developer) %>><h4>
			
				<span class="bottom"><%= vn.developer.name %>
			
		</span></h4>	</a>	
			<ul class="list-inline vnindex-genre text-left">
						<li class="vngenre-padding inline-nopadding"><i><%= link_to vn.name.truncate(30),vn_path(vn) ,:style =>"font-size: 1.1em;" %></i></li>
				</ul>
			
			
		</div>
	</div>
</div>
<% end %>
<% end %>

	</div>
</div>