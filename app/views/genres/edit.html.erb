<div class="container">
	<div class="row">

	<h1>Edit Developer</h1>

		<%= simple_form_for @developer do |f| %>

		<div class="row">
		<div class="col-lg-4">
		  <%= f.input :name, label: 'Name', error: 'Name is mandatory, please specify one' %>
		 </div>
		</div>
		<div class="row">
		 <div class="col-lg-4">
		  <%= f.input :details,label: 'Details' ,input_html: {style: "height:200px;"}%>
		 </div>
		</div>

		<div class="col-lg-12">
		  <%= f.button :submit , class: "btn btn-primary" %>
		 </div>
		<% end %>


	</div>

</div>