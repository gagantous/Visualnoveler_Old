<% title "Discover Visual Novels by genres" %>
<% description "Visual novels are sorted by genres in this page. Come join us to start tracking and discovering new visual novels!" %>

<div class="container-fluid">
	<div class="row vnindex-row">
		<div class="col-md-12">
			<h2 class="vnindex-heading">Random Genre listings</h2>
		</div>
	
<% @genres.each do |genre| %>
		<% vn = genre.vns.order("RANDOM()").first %>
		<% if vn %>
			<div class="vn-column">
				<%= link_to vn_path(vn) do %>
			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "vn-index-poster") %>
			<% end %>
				<div class="panel panel-default">
				<div class="panel-body panel-vnindex">
					<a href=<%= vn_path(vn) %>><h4><span class="bottom"><%= vn.name%></span></h4>	</a>
					<ul class="list-inline vnindex-genre text-left">
						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre),:style =>"font-size: 1.1em;" %></li>
					</ul>
			
			
				</div>
				</div>
			</div>
	<% end %>

<% end %>

	</div>
</div>