<% title 'Edit Profile' %>
<div class="container">
<div class="row">
   

<%= simple_form_for @user, html: { multipart: true }  do |f| %>

  <div class="form-inputs">
    <div class="row">
       <div class="col-md-12">
        <h2>Edit</h2>
       </div>
        <div class="col-md-4">
             <%= f.input :name, required: false, autofocus: true %>
        </div>
       
        <div class="col-md-4">
        <%= f.input :email, required: true, autofocus: true,required: false  %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
          <%= f.input :bio ,input_html: {style: "height:100px;"}%>
      </div>
    </div>

    
 
    <div class="col-md-6">
        <% if current_user.poster_image.url.present? %>
          <%= image_tag(current_user.poster_image.url,:class =>"formthumbnail") %>
        <% end %>

       <%= f.input :poster_image, :label => "Upload an image" %>
    </div>
  
  </div>
  <div class="row">
    <div class="col-md-12">
        <div class="form-actions">
          <%= f.button :submit, "Update",class: "register-button",:style =>"width: 100px;" %>
        </div>
    </div>
<% end %>
