<% title "Discover Users" %>
<% description "Discover new random users in Visualnoveler. Start tracking and discovering visual novels today!." %>
<div class="container">
	<div class="row">
		<% @random.each do |user| %>
		<div class="col-md-3">
			<h3><%= user.name %> </h3>
			<%= link_to image_tag(user.poster_image,class:"img-responsive",alt: user.name),user_path(user) %>
		</div>
		<% end %>
	</div>
</div>