<% title "Discover Users" %>
<% description "Discover new random users in Visualnoveler. Start tracking and discovering visual novels today!." %>
<div class="container" style="padding-bottom:10px;">
	<div class="row">
		<% @random.each do |user| %>
		<div class="col-md-3 col-xs-6">
			
			<h4><%= user.name.truncate(32) %> </h4>
			<%= link_to image_tag(user.poster_image,class:"img-circle img-responsive-half",alt: user.name),user_path(user) %>
		</div>
		<% end %>
	</div>
</div>