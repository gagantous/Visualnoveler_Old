<% title @user.name + "'s Profile" %>
<% description @user.name + "'s Profile." " Start tracking and discovering other visual novels at Visualnoveler with a growing community" %>
<section id="user">
<div class="container " style="margin-top:25px;">
	<div class="row usercoverbg">
	<div class="usercol-div">
 		 <div class="usercol user-image-div">
 		 <% if @user.poster_image.blank? %>
 		 	<%= image_tag("default_avatar.jpg",:class=>"userpic",:alt =>"user avatar") %>
 		 <% else %>
 			 <%= image_tag("#{@user.poster_image.url}",:class => "userpic",:alt =>"user avatar") %>
 		 <% end %>
 		</div>
 		<div class="col-md-6 col-xs-12">
 			<h1><%= @user.name %> </h1>
 			<% if @user == current_user %>
 			<a href=<%= edit_path %> class="a-inherit" data-no-turbolink="true">
 			<%= fa_icon "pencil",class:"fa-lg" %>
 			</a>
 			<% end %>
 			<div class="user-bio">
 				<p><%= markdown(@user.bio) %></p>
 			</div>
 			<div class="row">
	 			<div class="user-buttons">
	 				<div class="col-md-3 col-xs-6">
						<%= link_to library_user_path(@user), :class => "btn blue-button library-list"  do %>
							<span class="button-text">Library List</span>
						<% end %>
					</div>
					<div class="col-md-3 col-xs-6">
						<% if current_user != @user && user_signed_in? %>
							 <%= link_to similar_user_path(@user),class:"btn blue-button" do %>
	           					 <span class="button-text"><%= @similar_lib.count %> Shared VNs</span>
	        				 <% end %>
        				 <% end %>
					</div>
				</div>
			</div>
 		</div>
 	</div>
 		<div class="col-md-3 favourites-col col-xs-12">
 			<%= link_to favourite_user_path(@user) do %>
 				<h4 style="color:black;">Favourites</h4>
 			<% end %>
 			
 			<div class="row favourites-inner-row">
 			<% @lib.each do |lib| vn = lib.vn %>
 					<div class="user-favcolumn removefavouritepadding">
 					<ul class="img-list-hover-fav"><li>	
 					<%= link_to vn_path(vn) do %>
 						 <%= image_tag(vn.image_poster_url(:thumb),:alt => vn.name, :class=> "user-favimg") %>
 						 <span class="text-content-fav"><span><%= vn.name %></span></span>
 					<% end %>

					</li></ul>
 					</div>
 			<% end %>
 			</div>
 		</div>
 		<!-- end !-->
 	</div>
</div>	

<!-- post section !-->
<div class="user-post" style="padding-top:10px;">
	<div class="container">
		<div class="user-createpost">
			<div class="col-md-8">
				<% if current_user == @user %>
					<div class="user-newpost-form">
					<%= simple_form_for @new_post do |f| %>
						<%= f.input :detail,placeholder: "What are you doing right now?",label: false,input_html: {style: "height:100px;"}  %>
				 		<%= f.button :submit , class: "btn btn-success pull-right user-postbutton",data:{ disable_with: "Creating Post...."} %>
				 	<% end %>
					 </div>
				<% end %>
				<%= render 'library_entries',locals:{posts: @posts} %>
				
			</div>
			<%= render 'recent_ratings',locals:{recent_ratings: @recent_ratings} %>
			
		</div>
	</div>
</div>


<!-- comments !-->
<div class="container">
	<div class="row">
		
		<!-- No good reason for comments to exist right now
		<%= render 'comments',comments: @comments %>
		 !-->
	</div>
</div>
</section>