<% if @user.name %>
	<% title @user.name + "'s Profile" %>
<% else %>
	<% title 'Profile Page'%>
<% end %>
<h1><%= @user.id %></h1>
<div class="container usercoverbg">
	<div class="row">
 		 <div class="usercol user-image-div">
 		 <%= image_tag("#{@user.poster_image.url}",:class => "userpic") %>
 		</div>
 		<div class="col-md-6">
 			<h3 class="user-name"><%= @user.name %>
 			<a href=<%= edit_path %> class="a-inherit" data-no-turbolink="true">
 			<%= fa_icon "pencil" %>
 			</a>
 			</h3>
 			<div class="user-bio">
 				<p><%= @user.bio %></p>
 			</div>
 			<div class="user-buttons">
				<%= link_to watch_user_path(@user), :class => "btn ghost-button"  do %>
					<i class="fa fa-spinner"></i><span class="user-button-padding">Watching</span>
				<% end %>

				<%= link_to wishlist_user_path(@user), :class => "btn ghost-button"  do %>
					<i class="fa fa-gift "></i><span class="user-button-padding">Wishlist</span>
				<% end %>
					
				<%= link_to drop_user_path(@user), :class => "btn ghost-button"  do %>
					<i class="fa fa-thumbs-o-down"></i><span class="user-button-padding">Dropped</span>
				<% end %>

				<%= link_to completed_user_path(@user), :class => "btn ghost-button"  do %>
					<i class="fa fa-book"></i><span class="user-button-padding">Completed</span>
				<% end %>
			</div>
 		</div>
 		<div class="col-md-3">
 			<h4><i class="fa fa-heart-o"></i> Favourites</h4>
 			<div class="row">
 			<% @lib.each do |lib| vn = lib.vn %>
 					<div class="user-favcolumn removecharacterpadding">
 					<%= link_to vn_path(vn) do %>
 						 <%= image_tag(vn.image_poster,:class => "user-favimg") %>
 					<% end %>
 					</div>
 			<% end %>
 			</div>
 		</div>
 		<!-- end !-->
 	</div>
</div>	

<% if current_user == @user %>
<div class="user-createpost">
	<div class="container">
		<div class="row">
			
				<div class="col-md-9">
					<%= simple_form_for @new_post do |f| %>
					<%= f.input :detail,placeholder: "What are you doing right now?",label: false,input_html: {style: "height:100px;"}  %>

		 			 <%= f.button :submit , class: "btn btn-success pull-right user-postbutton" %>
		 			 <% end %>
				</div>
			
		</div>
	</div>
</div>
<% end %>

<div class="user-post">
<div class="container user-playing">
	<% @posts.each do |post| %>
	<% vn = post.library_entry.vn if post.library_entry %>
	<div class="row">
	<div class="col-md-9">
	<div class="panel panel-default">
  	<div class="panel-body">
		<%= button_to post,:method=>:delete,:class =>"btn btn-danger user-postdelete",data:{ disable_with: "Deleting Post...."} do %>
			<i class="fa fa-trash-o"></i>
		<% end %>
		<div class="col-md-2">
			<% if post.library_entry %>
			<%= link_to image_tag("#{vn.image_poster.url}",:alt => "#{vn.name}", :class=> "img-responsive pull-left"), vn_path(vn)  %>
			<% else %>
				<%= image_tag(@user.poster_image.url,:alt => "#{@user.name}",:class =>"img-responsive pull-left") %>
			<% end %>
		</div>
		<div class="col-md-10">
			<h4><%= post.detail %></h4>
			<hr>
			<div class="row">
				<div class="col-md-12">
					<% if post.library_entry %>
					<ul class="list-inline">
					<% vn.genres.each do |genre| %>
						<li><%= link_to genre.name,genre_path(genre) %></li>
					<% end %>
					</ul>
					<% end %>
				</div>
				<div class="col-md-4">
				<h5 class="user-time vn-postdate"><%= time_ago_in_words(post.created_at) %> ago.</h5>	
				</div>		
					<!-- end of nested divs-->
			</div>
		</div>
	</div></div> <!---panels -->
</div>
	</div><!---row -->
	<% end %>

	<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div></div>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

		<% if user_signed_in? %>
		<div class="user-createpost">
		<div class="row">
			
				<div class="col-md-9">
					<%= simple_form_for @new_comment do |f| %>
					<%= f.input :detail,placeholder: "Post a comment?",label: false,input_html: {style: "height:70px;"}  %>
					<%= f.hidden_field :wall_author_id,value: @user.id %>
		 			 <%= f.button :submit , class: "btn btn-success pull-right user-postbutton" %>
		 			 <% end %>
				</div>
			
		</div>
		</div>
		<% end%>
<!-- 
		<a href="#" id="add_comment_link">Comments</a>
		<a href="#" id="hide_comment_link">hide</a> -->
		<% @comments.each do |comment| %> 
		<div class="row">

		<div class="col-md-3">
			<%= image_tag(comment.post_author.poster_image.url,:class => "img-responsive") %>
		</div>
		<div class="col-md-9" id ="show_comment">
			<p><span class="text-primary default-text"><%= comment.post_author.name %> </span><span class="vn-postdate"> 5 minutes ago</span></p> 
		<p><%= comment.detail %> </p>
		</div>

		</div>
		<% end %>
	
		</div>
</div></div>