<div class="container-fluid vnindex-categorypadding">
	<div class="row">
			<h2 class="vnindex-heading">Dropped shows</h2>
		
	
		<% @lib.each do |lib| %>
		<% vn = lib.vn %>
<div class="vn-column">

			<%= image_tag("#{vn.image_poster}",:alt => "thumbsup", :class=> "vn-index-poster") %>
	
	<div class="panel panel-default paneltest">
		<div class="panel-body">


			<div class="text-center vnindex-title">
				<span class="lead "><%= vn.name %></span>
			</div>

			<ul class="list-inline vnindex-genre text-left">
					<% vn.genres.each do |genre| %>
						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre) %></li>
					<% end %>
				</ul>
			
		</div>
	</div>
</div>

<% end %>

	</div>
</div>
