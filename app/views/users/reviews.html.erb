<% title @user.name + "'s Reviews" %>

<section id="vn-review-section">
<div class="container">
	<div class="row" style="padding-top:20px;">
		<div class="col-md-12">
			<h1><%= link_to @user.name,user_path(@user)%>'s Reviews </h1>
		</div>
		<div class="col-md-10">
			<div class="panel panel-default"><div class="panel-body">
			<%= render :partial => 'reviews/review', collection: @reviews,locals: {vn_details: true}  %>
			</div></div>
		</div>
	</div>
</div>
</section>