<% title 'Edit Profile' %>
<div class="container">
<div class="row">
   
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:method => :put, :multipart => true}) do |f| %>
  <%= f.error_notification %>
  <div class="col-md-9">

  <div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
       <div class="col-md-12">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
       </div>
        <div class="col-md-5">
             <%= f.input :name, required: false, autofocus: true %>
            <%= f.input :bio ,:input_html => {:rows => 10}%>
          
             <%= f.button :submit, "Update",class: "register-button",:style =>"width: 100px;margin-top:10px;" %>
             
        </div>

        <div class="col-md-4 col-md-offset-1">
          <% if current_user.poster_image.url.present? %>
            <%= image_tag(current_user.poster_image.url,:class =>"formthumbnail") %>
             <%= link_to "Crop Profile Picture", crop_user_path(@user), :class => "btn btn-success", style: "margin-top: 15px;margin-bottom:15px;"%>
          <% end %>
         <%= f.input :poster_image, input_html: { hidden: true ,style:"display:none;",class:"file-upload-real" },label: false %>
        <%= link_to 'Upload Image','#',class:"file-upload-clicker btn btn-info",style:"margin-bottom:5px;" %>
        <input id="file-upload-text" class="custom-input" type="text" hidden="true">
         <%= link_to "Change Password", change_password_user_path(@user), :class => "btn register-button", style: "margin-top:25px;"%>
            
       </div>
      
       
       <!--  <div class="col-md-4">
        <%= f.input :email, required: true, autofocus: true,required: false  %>
        </div> -->
  
  

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    
      
    
         
 
<% end %>
