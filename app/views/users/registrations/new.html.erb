<% title 'Sign Up' %>

<div class="signup-bg" style="background: url(<%= asset_path ("signup-bg2.jpg") %>)no-repeat center center fixed;"> 
<div class="container">
<div class="row">

<div class="col-md-4 col-md-offset-4" style="padding-top:75px;">
	<div class="panel panel-default">
  <div class="panel-body" style="margin-left:35px;">
<h2 class ="signup">Sign up
   <br></h2>
<!--    <a href="#" data-toggle="modal" data-target="#login-modal" class="btn btn-dropbox" style="margin-left:40px;">Login</a> -->

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true,label: false,placeholder: "Email", autofocus: true,input_html: {style: "width:260px;"} %>
    <%= f.input :name, required: true,label: false, placeholder: "Username",input_html: {style: "width:260px;"} %>
    <%= f.input :password, required: true,label: false, placeholder: "Password",input_html: {style: "width:260px;"} %>

  </div>
  <div class="signup">
    <%= f.button :submit, "Sign up",:class =>"register-button" %>
  </div>
<% end %>
<br>
<%= render "users/shared/links" %>

  </div>
</div>
</div>


</div>
</div>
</div>