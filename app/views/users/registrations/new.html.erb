<% title 'Sign Up' %>
<div class="container">
<div class="row">

<div class="col-md-4 col-md-offset-4">
	<div class="panel panel-default">
  <div class="panel-body">
<h2 class ="signup">Sign up</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true,label: false,placeholder: "Email", autofocus: true,input_html: {style: "width:260px;"} %>
    <%= f.input :name, required: true,label: false, placeholder: "Username",input_html: {style: "width:260px;"} %>
    <%= f.input :password, required: true,label: false, placeholder: "Password",input_html: {style: "width:260px;"} %>

  </div>
  <div class="signup">
    <%= f.button :submit, "Sign up",:class =>"register-button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

  </div>
</div>


</div>
</div>
</div>