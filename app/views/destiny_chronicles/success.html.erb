<% title "Destiny Chronicles - Visualnoveler" %>

<div class="container">
	<div class="row">
		<div class="col-md-5 col-md-offset-2" style="margin-top:35vh;">
			<h1>Subscription Success!</h1>

			<p>Welcome to the Destiny Chronicles updates list.</p>

			<%= link_to "Back to website", destiny_chronicles_path %>
		</div>

		<div class="col-md-3" style="margin-top:25vh;">
			<%= image_tag("destiny-chronicles/celeste.png",class:"char-profile-img",alt: "celeste") %>
		</div> 
	</div>
</div>


<script type="text/javascript">
	$(function() {
		$('.char-portrait').click(function(){
	   		$('.selected').removeClass('selected'); // removes the previous selected class
	   		$(this).addClass('selected'); // adds the class to the clicked image
	   		ShowCharacterProfile($(this).attr('id'));
		});

		function isValidEmailAddress(emailAddress) {
		    var pattern = /^([a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+(\.[a-z\d!#$%&'*+\-\/=?^_`{|}~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]+)*|"((([ \t]*\r\n)?[ \t]+)?([\x01-\x08\x0b\x0c\x0e-\x1f\x7f\x21\x23-\x5b\x5d-\x7e\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|\\[\x01-\x09\x0b\x0c\x0d-\x7f\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))*(([ \t]*\r\n)?[ \t]+)?")@(([a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\d\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.)+([a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]|[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF][a-z\d\-._~\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]*[a-z\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])\.?$/i;
		    return pattern.test(emailAddress);
		};

		function ShowCharacterProfile(name) {
			switch (name) {
				case "celeste-profile":
					$("#celeste").fadeIn();
					$("#ruby").hide();
					$("#valana").hide();
					$("#thief").hide();
					break;
				case "ruby-profile":
					$("#ruby").fadeIn();
					$("#celeste").hide();
					$("#valana").hide();
					$("#thief").hide();
					break;
				case "valana-profile":
					$("#valana").fadeIn();
					$("#ruby").hide();
					$("#celeste").hide();
					$("#thief").hide();
					break;
				case "thief-profile":
					$("#thief").fadeIn();
					$("#celeste").hide();
					$("#ruby").hide();
					$("#valana").hide();
				default:
					break;
			}
		}
		$('.nav').on('click', 'a', function(event){
		    event.preventDefault();

		    $('html, body').animate({
		        scrollTop: $( $.attr(this, 'href') ).offset().top
		    }, 500);
		});
		$('.mobile-title').on('click',function(event){
		    event.preventDefault();
		    $('html, body').animate({
		        scrollTop: $( $.attr(this, 'href') ).offset().top
		    }, 500);
		});	
		$('.subscribe-form').on('submit',function(event) {
		    if (isValidEmailAddress($(this).find(".email").val())) {
				fbq('track', 'Lead');
		    }
		});
	});


</script>


