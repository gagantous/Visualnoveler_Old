<div class='nested-fields'>
	<div class="row">
		<div class="col-md-4">
 			<%= f.input :name %>
		</div>
		 <div class="col-md-2">
		 	<%= f.input :img_string %>
		 </div>
		 <div class="col-md-2">
		 	<%= image_tag f.object.img_string.url, :class => 'facter-edit-thumbnail' if f.object.img_string? %>
		 </div>
		<div class="col-md-2">
	 		<%= f.input :role %>
	 	</div>
		<div class="col-md-10">
			<%= f.input :summary,input_html: {style: "height:150px;"}%>
		</div>
	</div>
 </div>