<div class="vncharacter">
<div class="container">
	<% @characters.each do |char| %>
	<a name=<%= char.name.delete(' ')%>></a>
	<div class="row vncharacter-section">
		<div class="col-md-2">
			<%= link_to image_tag("#{char.img_string.url}",:alt => "thumbsup", :class=> "img-responsive"), character_path(char)  %>
		</div>
		<div class="col-md-7">
			<h2 class="vn-characterpage-name"><%= char.name %></h2>
			<span class="summary-text"><%= char.summary %></span>
		</div>
	</div>
		<% end %>
	</div>
</div>

