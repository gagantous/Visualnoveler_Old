	<%= simple_form_for @vn do |f| %>


		<div class="col-lg-3">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Visual Novel', error: 'Name is mandatory, please specify one',required: false  %>
		 </div>
		 <div class="col-lg-4">
		  <%= f.input :trailer_url %>
		</div>

		  <div class="col-lg-12">
		  	<%= f.association :genres, as: :check_boxes %>
	<!-- 		<%= f.association :genres, as: :check_boxes,item_wrapper_tag: :div,item_wrapper_class: "checkbox-inlines",label: false %>  </div> -->
			</div>

		  <div class="col-lg-2">		 
			<%= f.association :developer,input_html: {style: "width:160px;"} %>
		</div>

		  <div class="col-lg-2">
		  <%= f.input :rating_number,input_html: {style: "width:100px;"} %>
		</div>
		<div class="col-lg-2">
		  <%= f.input :release_date,input_html: {style: "width:150px;"} %>
		</div>
		<div class="col-lg-12">
		  <%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>
	
		 <div class="col-lg-2">
		 	 <%= f.input :image_poster,input_html: {style: "width:150px;"} %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_coverpage %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_1,label: "Screenshot 1", input_html: {style: "width:150px;"} %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_2,label: "Screenshot 2",input_html: {style: "width:150px;"} %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_3,label: "Screenshot 3",input_html: {style: "width:150px;"} %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_4,label: "Screenshot 4",input_html: {style: "width:150px;"} %>
		 </div>
		 
		 <div class="col-lg-12">
		  <%= f.input :isFeatured,input_html: {style: "width:200px;"} %>
		 </div>
		
			 <%= f.simple_fields_for :characters do |c| %>
				 <%= render 'character_fields', :f => c %>
			 
		 	<% end %>
 
   		 <div class='links col-md-3'>
      		<%= link_to_add_association 'Add Character', f, :characters,:class => 'btn btn-default' %>

   		 </div>
   		 <div class='col-md-12'>
		  <%= f.button :submit , class: "btn btn-primary" %>
		</div>
		<% end %>