	<%= simple_form_for @vn do |f| %>


		<div class="col-lg-3">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Visual Novel', error: 'Name is mandatory, please specify one',required: false  %>
		 </div>
		 <div class="col-lg-3">
		  <%= f.input :alias, input_html: {style: "width:200px;"}, label: 'Alias', error: 'Name is mandatory, please specify one',required: false  %>
		 </div>

		  <div class="col-lg-12">
		 
			<%= f.association :genres, as: :check_boxes %> 
		</div>
		 <div class="col-lg-12">
			<%= f.association :publishers, as: :check_boxes %> 
		</div>
		 <div class="col-lg-12">
		 
			<%= f.association :developer,input_html: {style: "width:150px;"},collection: Developer.order('name ASC') %> 
			<%= f.association :franchise,input_html: {style: "width:150px;"} %> 
			<%= f.input :status,input_html: {style: "width:150px;"} %> 
		</div>

		  <div class="col-lg-2">
		  <%= f.input :rating_number,input_html: {style: "width:100px;"} %>
		</div>
		<div class="col-lg-6">
		  <%= f.input :release_date,start_year: @start_year,end_year: @end_year,prompt: "Unknown",input_html: {style: "width:150px;"} %>
		</div>
		<div class="col-lg-2">
		  <%= f.input :trailer_url %>
		</div>

		<div class="col-lg-12">
		  <%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>
	
		 <div class="col-lg-2">
		 	 <%= f.input :image_poster %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_coverpage %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_1,label: "Screenshot 1" %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_2,label: "Screenshot 2" %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_3,label: "Screenshot 3"%>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_4,label: "Screenshot 4"%>
		 </div>
		 
		 <div class="col-lg-12">
		  <%= f.input :isFeatured %>
		 </div>
		
   		 <div class='links col-md-3'>
      		<%= link_to_add_association 'Add Character', f, :characters,:class => 'btn btn-default' %>

   		 </div>
   		 <div class='col-md-12' style="margin-top:20px;">
		  <%= f.button :submit , class: "btn btn-primary",data:{ disable_with: "Creating.."}  %>
		</div>
		<% end %>