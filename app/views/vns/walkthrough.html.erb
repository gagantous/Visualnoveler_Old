<% title "#{@vn.name} Walkthrough" %>
<% description "Guide for #{@vn.name} character route walkthroughs" %>
<section id ="vn-walkthrough">
<div class="container">
	<div class="row row-upperpadding">
		<div class="col-md-9">
		<div class="panel panel-default"><div class="panel-body">
			<h1 class="text-center"><%= link_to "#{@vn.name}",vn_path(@vn) %> </h1><h2 class="text-center" style="padding-bottom:10px;">Character Route Walkthroughs</h2>
			<%= markdown(@vn.walkthrough_content) unless @vn.walkthrough_content.blank? %>
			<% if @vn.walkthrough_content.blank? %>
				<p>Ops! We couldn't find any walkthroughs available for <%= @vn.name %> right now. Check back some time later!</p>
			<% end %>
			<% if user_signed_in? && (current_user.admin? || current_user.mod?) %>
				<%= link_to 'Edit Walkthrough',edit_walkthrough_vn_path(@vn),class:"btn btn-primary" %>
			<% end %>
		</div></div>
	</div>
	</div>
</div>
</section>