<div class="container">
	<div class="row">
		<h2 class="vnindex-heading">Featured</h2>
		<% @vn.each do |vn| %>
		<div class="col-md-3">	
			<%= image_tag("#{vn.image_1.url}",:alt => vn.name, :class=> "vn-index-image") %>
			<div class="panel panel-default">
			<div class="panel-body panel-vnindex">
  				<h4><span class="bottom"><%= vn.name%></span></h4>
				<ul class="list-inline vnindex-genre text-left">
					<% vn.genres.each do |genre| %>
						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre) %>
						</li>
					<% end %>
				</ul>
			
			</div>
			</div>
		</div>
<% end %>

	</div>
</div>

