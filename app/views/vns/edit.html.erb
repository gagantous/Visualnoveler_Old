<% title "Edit #{@vn.name}" %>
<h1>Edit</h1>

<div class="container">
	<div class="row">
		<%= simple_form_for @vn, html: { multipart: true }  do |f| %>
		<div class="col-lg-3">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Visual Novel', error: 'Name is mandatory, please specify one' %>
		 </div>
		 <div class="col-lg-12">
		 
			<%= f.association :genres, as: :check_boxes %> 
		</div>
		 <div class="col-lg-12">
		 
			<%= f.association :developer,input_html: {style: "width:150px;"} %> 
			<%= f.association :franchise,input_html: {style: "width:150px;"} %> 
		</div>

		

		  <div class="col-lg-2">
		  <%= f.input :rating_number,input_html: {style: "width:100px;"} %>
		</div>
		<div class="col-lg-2">
		  <%= f.input :release_date,input_html: {style: "width:150px;"} %>
		</div>
		<div class="col-lg-4">
		  <%= f.input :trailer_url %>
		</div>
		<div class="col-lg-12">
			
		  <%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>
	
		 <div class="col-lg-2">
		 	 <%= f.input :image_poster %>
  			<%= image_tag f.object.image_poster.url, :class => "formthumbnail" if f.object.image_poster? %>
		 </div>
		  <div class="col-lg-2">
		 	 

  			<%= f.input :image_coverpage %>
  			<%= image_tag f.object.image_coverpage.url, :class => "formthumbnail" if f.object.image_coverpage? %>

		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_1,label: "Screenshot 1" %>
  			<%= image_tag f.object.image_1.url, :class => "formthumbnail" if f.object.image_1? %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_2,label: "Screenshot 2" %>
  			<%= image_tag f.object.image_2.url, :class => "formthumbnail" if f.object.image_1? %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_3,label: "Screenshot 3"%>
  			<%= image_tag f.object.image_3.url, :class => "formthumbnail" if f.object.image_1? %>
		 </div>
		  <div class="col-lg-2">
		 	 <%= f.input :image_4,label: "Screenshot 4" %>
  			<%= image_tag f.object.image_4.url, :class => "formthumbnail" if f.object.image_1? %>
		 </div>
		  <div class="col-lg-12">
		  <%= f.input :isFeatured,input_html: {style: "width:150px;"} %>
		 </div>


	</div>
</div>
<div class="container">
	<div class="row">
		<h3>Characters</h3>
			<%= f.simple_fields_for :characters do |char| %>
				 <div class="col-md-4">
			 	<%= char.input :name %>
			 </div>
			
			  <div class="col-md-3">
			 	<%= char.input :img_string %>
			 </div>

			 <div class="col-md-2">
			 	<%= image_tag char.object.img_string.url, :style => "width:60px;height:100px;" if char.object.img_string? %>
			 </div>

			 <div class="col-md-12">
			 	<%= char.input :summary,input_html: {style: "height:150px;"}%>
			 </div>

			
			<% end %>
		
	</div>
</div>


		<div class="col-md-offset-1">
		<%= f.button :submit , class: "btn btn-primary",data:{ disable_with: "Updating..."} %>
		</div>


		<% end %>
