<% title "Search Visual Novels" %>
<% description "Search for a visual novel." %>
<div class="container-fluid">
	<div class="row vnindex-row" style="padding-left:38px;">

			<%= simple_form_for Vn.new, :method => :get, url: search_vns_path do |f| %>
		<div class="col-md-12">
			<h2 style="">Advanced Visual Novel Search

				 <%= f.button :button, class: "btn btn-primary",style:"position:relative;top:0px;" do %>
                  <i class="fa fa-search 6x"></i>
             <% end %>
			</h2>

		</div>	
		<div class="row">
			<div class="col-md-12">

				<% Genre.all.each do |genre| %>
				    <label class="checkbox-inline">
				      <%= check_box_tag 'genre_ids[]',genre.id %>
						<span style="font-weight:normal;"><%= genre.name %> </span>
				     </label>
				 <% end %>
          <!--   <div class="col-md-2">
            	<%= select_tag 'rating_type', options_for_select(["Sort by highest Rating", "Sort by lowest Rating"]),{:class => "select optional form-control"} %>
			</div> -->
			<% end %>
			
		</div>
		</div>
		<h3>Some random visual novels</h3>
		<% @random.each do |vn| %>
		<div class="vn-column">
			<%= link_to vn_path(vn) do %>
			<%= image_tag("#{vn.image_poster}",:alt => vn.name, :class=> "vn-index-poster") %>
			<% end %>
			<div class="panel panel-default paneltest">
			<div class="panel-body panel-vnindex">
			<a href=<%= vn_path(vn) %>><h4>
				<% if vn.name.length > 30 %>
					<span class="bottom" style="font-size:14px !important;"><%= vn.name %>
				<% else %>
					<span class="bottom"><%= vn.name %>
				<% end %>
			</span></h4></a>	
			<ul class="list-inline vnindex-genre">
					<% vn.genres.limit(2).each do |genre| %>
						<li class="vngenre-padding inline-nopadding"><%= link_to genre.name,genre_path(genre) %></li>
					<% end %>
			</ul>
		</div>
	</div>
</div>

<% end %>	
	</div>
</div>