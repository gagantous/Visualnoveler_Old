

<div class="container">
	<div class="row">
		<h1> New Character</h1>
		<%= simple_form_for @character do |f| %>


		<div class="col-lg-4">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Character', error: 'Name is mandatory, please specify one',required: false  %>

		 </div>

		  <div class="col-lg-4">
		  <%= f.input :voiceactor,input_html: {style: "width:150px;"} %> 
		</div>
		 <div class="col-lg-8">
		  <%= f.input :img_string,input_html: {style: "width:150px;"} %> 
		</div>

		  <div class="col-lg-12">
		 
			<%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>
		<div class="col-lg-12 char-creation-wrapper">
			<%= f.association :vns, :as => :check_boxes %>
		</div>


		<div class="col-lg-12" style="margin-top:20px;">
		  <%= f.button :submit , class: "btn btn-primary" %>
		</div>
		<% end %>

	</div>

	</div>

</div>