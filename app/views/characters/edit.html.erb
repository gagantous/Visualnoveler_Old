<% title 'Edit Character' %>
<h1>Edit</h1>

<div class="container">
	<div class="row">
		<%= simple_form_for @character do |f| %>


		<div class="col-lg-3">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Visual Novel', error: 'Name is mandatory, please specify one' %>
		 </div>

		  <div class="col-lg-3">
		 	<%= f.input :img_string %>
  			<%= image_tag f.object.img_string.url, :class => "formcharacter" if f.object.img_string? %>
		</div>
		
		<div class="col-lg-12">
		  <%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>
		 <div class="col-lg-8">

			<%= f.association :vns, :as => :check_boxes %>
		</div>
		<div class="col-lg-12">
		  <%= f.button :submit , class: "btn btn-primary" %>
		
		 
		 </div>
		<% end %>
		<div class="col-md-12">
			  <% if current_user.admin? %>
			  <%= button_to @character,:method=>:delete,:style =>"margin-top:50px;",:class =>"btn btn-danger",data:{ disable_with: "Deleting screenshot...."} do %>
			 	<i class="fa fa-trash-o"></i>
				<% end %>
			  <% end %>
		</div>
	</div>

	</div>

</div>