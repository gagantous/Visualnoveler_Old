<% title 'Edit Character' %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Edit Character</h1>
		</div>
		<%= simple_form_for @character do |f| %>


		<div class="col-lg-3">
		  <%= f.input :name, input_html: {style: "width:200px;"}, label: 'Name of Character', error: 'Name is mandatory, please specify one' %>
		 </div>

		  <div class="col-lg-3">
		 	<%= f.input :img_string %>
  			<%= image_tag f.object.img_string.url, :class => "formcharacter" if f.object.img_string? %>
		</div>
		<div class="col-md-2">
		 	<%= f.input :role %>
		 </div>
		<div class="col-lg-12">
		  <%= f.input :summary,input_html: {style: "height:150px;"} %>
		</div>

		<div class="col-lg-6">
			<%= f.association :vns,input_html: {class:"selectpicker",'data-live-search' => true} %>
		</div>

		<div class="col-lg-12" style="margin-top:20px;">
		  <%= f.button :submit , class: "btn btn-primary" %>
		 </div>
		<% end %>
		<div class="col-md-12">
			  <% if current_user.admin? %>
			  <%= button_to @character,:method=>:delete,:style =>"margin-top:50px;",:class =>"btn btn-danger",data:{ disable_with: "Deleting Character...",confirm: "Are you sure?"} do %>
			 	<i class="fa fa-trash-o"></i> Delete
				<% end %>
			  <% end %>
		</div>
	</div>

	</div>

</div>