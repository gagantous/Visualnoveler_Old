<div class="container">
	<div class="row">

	<h1>Edit Screenshot</h1>

		<%= simple_form_for @screenshot do |f| %>

			<div class="col-lg-4">
		 	 	<%= f.input :name,  label: 'Screenshot details' %>
			 </div>
		 	<div class="col-lg-6">
			 	<%= f.input :image, label: 'Image' %>
  				<%= image_tag f.object.image.url, :class => "img-responsive" if f.object.image? %>
			 </div>
			<div class="col-lg-12">
			  <%= f.button :submit , class: "btn btn-primary" %>
			
			 </div>

			 
		<% end %>

		<div class="col-md-12">
			  <%= button_to @screenshot,:method=>:delete,:controller => "screenshots",:style =>"margin-top:50px;",:class =>"btn btn-danger",data:{ disable_with: "Deleting screenshot...."} do %>
			 	<i class="fa fa-trash-o"></i>
				<% end %>
		</div>



	</div>

</div>